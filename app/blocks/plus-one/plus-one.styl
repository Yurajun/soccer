.plus-one
	margin-top -32px
	display block

	&__content
		position relative
		padding 0 40px 0 0
		display flex
		transform rotate(-10.5deg)
		justify-content space-between

.plus-one__img
	position absolute
	top -23px
	right 50px
	background-repeat no-repeat
	background-position center center
	background-size cover
	transform rotate(10.5deg)
	size(170px, 160px)
	retinaBackground(plusone2, png)

.plus-text
	margin-top -39px
	font-family main-fone
	text-transform uppercase
	font-size 39px

	&__start
		text-indent 153px

	&__start-span
		font-size 74px

	&__center
		text-indent 60px
		letter-spacing -.8px

	&__end
		position relative
		top 5px
		right 24px
		text-align right

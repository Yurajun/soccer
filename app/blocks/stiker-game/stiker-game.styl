.stiker-game
	position relative
	z-index 3
	display flex
	justify-content flex-end
	transform rotate(-11deg)

	&__img
		position absolute
		z-index 29
		top -10.625vw
		left 8.4375vw
		background-repeat no-repeat
		background-position center top
		background-size cover
		transform rotate(11deg)
		size(18.85416666666667vw, 27.34375vw)
		retinaBackground(stiker-game, png)

.two-slides
	&__img
		position absolute
		z-index 30
		top -6.71875vw
		left -1.09375vw
		background-repeat no-repeat
		background-position center top
		background-size cover
		transform rotate(11deg)
		size(23.125vw, 19.375vw)
		retinaBackground(two-stikers, png)

.stikergame-text
	padding 2.291666666666667vw 0 2.8125vw 10.83333333333333vw
	width 46.875vw
	font-family main-fone
	color share-white
	background-color text-red

	&__one
		margin-bottom -.2604166666666667vw
		font-size 2.708333333333333vw
		text-transform uppercase

	&__two
		font-size 1.770833333333333vw

		& span
			text-transform uppercase

	&__three
		margin-bottom .78125vw
		font-size 1.770833333333333vw

	&__four
		font-size 1.770833333333333vw

		& span
			font-size 2.760416666666667vw
			text-transform uppercase

	&__five
		font-size 1.770833333333333vw

	&__six
		font-size 1.770833333333333vw